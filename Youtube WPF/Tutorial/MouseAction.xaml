<Window x:Class="Youtube_WPF.Tutorial.MouseAction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Youtube_WPF.Tutorial"
        mc:Ignorable="d"
        Title="MouseAction" Height="450" Width="800">
    
    <!--Need C# MSGComand and C# MyDataContext-->
    <!--https://www.youtube.com/watch?v=9KhZr83Juf8-->
    <Window.InputBindings>
        <MouseBinding MouseAction="LeftClick"
                      Command="{Binding MessageCommand}" CommandParameter="Left single click"/>
        
    </Window.InputBindings>
    <Grid>
        
    </Grid>
</Window>
