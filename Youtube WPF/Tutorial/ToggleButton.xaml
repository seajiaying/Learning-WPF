<UserControl x:Class="Youtube_WPF.Tutorial.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Youtube_WPF.Tutorial"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Thickness x:Key="Thickness1">-65,0,0,0</Thickness>
        <Thickness x:Key="Thickness2">0,0,-65,0</Thickness>
    </UserControl.Resources>


        <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid HorizontalAlignment="Left" Height="77" Margin="0" VerticalAlignment="Top" Width="145">
            <Rectangle x:Name="Back" Fill="#FFA0A0A0" HorizontalAlignment="Left" Height="67" Stroke="Black" VerticalAlignment="Top" Width="136" Margin="4,5,0,0" RadiusY="35" RadiusX="35" Grid.ColumnSpan="3" StrokeThickness="0" MouseLeftButtonDown="Back_MouseLeftButtonDown"/>
            <Ellipse x:Name="Dot" HorizontalAlignment="Center" Height="58" Stroke="Black" VerticalAlignment="Center" Width="58" Fill="White" StrokeThickness="0" MouseLeftButtonDown="Dot_MouseLeftButtonDown" Margin="-65,0,0,0"/>
        </Grid>
        </Viewbox>

</UserControl>
