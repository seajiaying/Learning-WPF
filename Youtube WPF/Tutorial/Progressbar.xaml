<Window x:Class="Youtube_WPF.Tutorial.Progressbar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Youtube_WPF.Tutorial"
        mc:Ignorable="d"
        Title="Progressbar" Height="450" Width="800">
    <Grid>
        <ProgressBar Name="pb0" Value="70" HorizontalAlignment="Left" Height="39" Margin="124,161,0,0" VerticalAlignment="Top" Width="256" Foreground="#FF6587E0"/>
        <ProgressBar Name ="pb1" HorizontalAlignment="Left" Height="39" Margin="124,237,0,0" VerticalAlignment="Top" Width="256" Foreground="#FF6587E0"/>
        
        <StatusBar Name="sbar1" Background="BlueViolet"   VerticalAlignment="Bottom" Height="20" >
            <StatusBarItem>
                <TextBlock>Status:</TextBlock>
            </StatusBarItem>
            
            <StatusBar Height="71" Width="8"/>
        </StatusBar>

    </Grid>
</Window>
