<Window x:Class="Youtube_WPF.Tutorial.Date06122020"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Youtube_WPF.Tutorial"
        mc:Ignorable="d"
        Title="Date06122020" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Click="Button_Click"  Content="my default button" FontSize="22" HorizontalAlignment="Left" Margin="119,204,0,0" VerticalAlignment="Top" Width="208" Height="85"/>
        <TextBox x:Name="first"  HorizontalAlignment="Left" Height="23" Margin="48,52,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="second" HorizontalAlignment="Left" Height="23" Margin="48,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <StackPanel Grid.Column="1" Margin="62,80,96,130">
            <DatePicker DisplayDateStart="2020-06-05" DisplayDateEnd="2020-06-30"/> <!--日期可以选择显示多少天。（起始日期跟结束日期）-->
        </StackPanel>
    </Grid>
</Window>
